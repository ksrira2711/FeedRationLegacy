<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ration_formulation.feed_ration_latest">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/milkglass"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Feed_Ration"
            android:configChanges="orientation"
            android:label="Feed Ration"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PrefsActivity"
            android:configChanges="orientation"
            android:label="User Settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" />
        <activity
            android:name=".results"
            android:configChanges="orientation"
            android:label="Feed Requirements"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Ration_Formulator"
            android:alwaysRetainTaskState="true"
            android:configChanges="locale|orientation"
            android:label="Ration Formulator"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FeedMixture"
            android:configChanges="orientation"
            android:label="Feed Stuffs"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".FeedSupplement"
            android:configChanges="orientation"
            android:label="@string/title_activity_feed_supplement"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Feed_Final_results"
            android:configChanges="orientation"
            android:label="@string/title_activity_feed__final_results"
            android:screenOrientation="portrait" />
        <activity
            android:name=".INSTRUCTIONS1"
            android:configChanges="orientation"
            android:label="Instructions"
            android:screenOrientation="portrait" />
        <activity
            android:name=".INSTRUCTIONS2"
            android:label="@string/title_activity_instructions2" />
        <activity
            android:name=".Ration_formulator_activity"
            android:label="@string/title_activity_ration_formulator_activity">


            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".Reports"></activity>
    </application>

</manifest>